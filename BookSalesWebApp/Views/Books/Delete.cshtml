@model BookSalesWebApp.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Book</h4>
    <hr />
    @if (Model.BookSaleItems.Count > 0)
    {
        <p role="alert" class="alert alert-warning"><strong>Warning!</strong> Books that have had at least one sale cannot be deleted.</p>
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ListPrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ListPrice)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.BookSaleItems)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BookSaleItems.Count)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ISBN" />
        @if (Model.BookSaleItems.Count > 0)
        {
            <input type="submit" value="Delete" class="btn btn-default" disabled/>
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-default" />
        }
        |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
