@model BookSalesWebApp.Models.BookSale

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>BookSale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label col-md-2" for="CustomerID">Customer</label>
                <div class="col-md-10">
                    @Html.DropDownList("CustomerID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                List<BookSalesWebApp.ViewModels.SelectedBookData> books = ViewBag.Books;
                                foreach (var book in books)
                                {
                                    if (cnt++ % 2 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                            name="selectedBooks"
                                            value="@book.ISBN"
                                            @(Html.Raw(book.Selected ? "checked=\"checked\"" : "")) />
                                            @book.ISBN @:  @book.Title
                                    @:</td>
                                 }
                                @:</tr>
                            }
                        </table>
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
